{
    "compilerOptions": {
        "target": "es2020",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "experimentalDecorators": true,
        "outDir": "tsout",
        "declaration": true,
        "declarationDir": "type",
        "esModuleInterop": true,
        "stripInternal": true,
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}